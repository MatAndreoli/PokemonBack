pipeline {
    agent any
    tools {
        maven 'Maven363' 
    }
    environment {
        DATE = new Date().format('yy.M')
        TAG = "${DATE}.${BUILD_NUMBER}"
        DOCKERFILE_PATH = "src/main/docker"
    }
    stages {
        stage('Update Version') {
            steps {
                cleanWs()
                echo "Updating app version..."
                checkout([
                    $class: 'GitSCM', 
                    branches: [[name: '*/Main']], 
                    extensions: [], 
                    userRemoteConfigs: [[
                        credentialsId: 'GitHubCreds', 
                        url: 'https://github.com/MatAndreoli/PokemonBack'
                    ]]]
                )
                sh "git checkout Main" //To get a local branch tracking remote
                sh '''
                python3 update_version.py
                git add .
                git commit -m 'Jenkins Update Version'
                '''
            }
        }
        stage('Deliver') {
            steps {
                sh'''
                mvn clean install -DskipTests
                python3 get_last_docker_img.py
                export $(grep -v '^#' .env | xargs)
                
                LOCAL_IMG=pokemon-api
                TAG_IMG=matandreoli/pokemon-api:$NEXT_VERSION
                IMG=matandreoli/pokemon-api:latest

                docker build -f $DOCKERFILE_PATH/Dockerfile.jvm -t $LOCAL_IMG .
                echo $TAG_IMG
                docker images

                docker rmi pokemon-api
                '''
            }
        }
    }
}
